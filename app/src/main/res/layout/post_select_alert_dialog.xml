<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_onlyDayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_selectedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select POST"
                android:textColor="@color/mat_white"
                android:textSize="@dimen/_20sdp" />
        </LinearLayout>

        <nk.mobileapps.spinnerlib.SearchableSpinner
            android:id="@+id/sp_post"
            app:searchable="false"
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/spinner_bg"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_onlyDayNameOC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_onlyDayName"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="end"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_DayOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="end"
            android:text="OK"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
