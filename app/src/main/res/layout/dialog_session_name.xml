<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10">

    <LinearLayout
        android:id="@+id/layout_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:padding="@dimen/dimen_5"
            android:text="@string/enter_session_name"
            android:textColor="@color/text_title_color"
            android:textSize="19sp"
            app:customFont="@string/font_name" />

        <com.bhargo.user.custom.CustomEditText
            android:id="@+id/etSessionName"
            style="@style/edittextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"

            android:padding="@dimen/dimen_5"
            android:textColor="@color/text_title_color"
            android:textSize="19sp"
            app:customFont="@string/font_name" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <com.bhargo.user.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:padding="@dimen/dimen_5"
            android:text="@string/select_session_image"
            android:textColor="@color/text_title_color"
            android:textSize="19sp"
            app:customFont="@string/font_name" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivsessionimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_baseline_image_120" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="1.5"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <com.bhargo.user.custom.CustomButton
            android:id="@+id/cb_cancel"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/dimen_10"
            android:background="@drawable/button_rounded_corners"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/mat_white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:customFont="@string/font_name_bold" />
        <com.bhargo.user.custom.CustomButton
            android:visibility="invisible"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dimen_10"

            android:background="@drawable/button_rounded_corners"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/mat_white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:customFont="@string/font_name_bold" />


        <com.bhargo.user.custom.CustomButton
            android:id="@+id/cb_create"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dimen_10"

            android:background="@drawable/button_rounded_corners"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/mat_white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:customFont="@string/font_name_bold" />

    </LinearLayout>

</LinearLayout>