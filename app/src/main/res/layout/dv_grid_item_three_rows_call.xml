<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout

            android:id="@+id/rl_dv_gitr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_dv_gitr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_dv_gitr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/ctv_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/dv_rectangle"
                android:gravity="center"
                android:text="value"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:customFont="@string/font_name_semi_bold" />
            <View
                android:id="@+id/v_dv_gitr"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/ll_dv_gitr"
                android:background="@color/chat_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_dv_gitr"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_5sdp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/tv_gitr_Heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Heading"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        app:customFont="@string/font_name_bold" />

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/tv_gitr_SubHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Heading"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="@dimen/_12sdp"
                        app:customFont="@string/font_name_semi_bold" />

                    <LinearLayout
                        android:id="@+id/ll_Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/iv_gitrc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_shape_round"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_call_24" />


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
