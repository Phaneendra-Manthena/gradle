<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_187"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bg_card"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="end"
            android:paddingTop="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:orientation="horizontal">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/item_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISA"
                android:background="@drawable/widget_seven_item_bg"
                android:padding="@dimen/dimen_3"
                android:textColor="@color/purple_200"
                app:customFont="@string/font_satoshi_bold"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_15"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginEnd="@dimen/dimen_25"
            android:orientation="horizontal">

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/white"
                app:customFont="@string/font_satoshi"
                android:text="****    ****    ****    "/>

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_gitr_Heading"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_24"
                android:textColor="@color/white"
                app:customFont="@string/font_satoshi"
                android:text="1234"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingTop="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginEnd="@dimen/dimen_25"
            android:orientation="horizontal">

            <com.bhargo.user.custom.CustomTextView

                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/LightGrey"
                app:customFont="@string/font_satoshi"
                android:text="Card Holder Name"/>

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/LightGrey"
                app:customFont="@string/font_satoshi"
                android:text="Expiry Date"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginEnd="@dimen/dimen_25"
            android:orientation="horizontal">

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gitr_SubHeading"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/white"
                android:maxLength="20"
                app:customFont="@string/font_satoshi"
                android:text="Card Holder Name"/>



            <LinearLayout
                android:id="@+id/ll_Description"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>


        </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>