<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dv_gitr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time_line_pending_default" />

            <View
                android:id="@+id/view_verticalLine"
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="@color/time_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tv_gitr_Heading"
                    style="@style/dataViewerTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/heading"
                    android:textColor="?attr/bhargo_color_ten"
                    android:textSize="@dimen/control_input_text_size"
                    app:customFont="@string/font_satoshi_bold" />

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tv_timeline_date"
                    style="@style/dataViewerTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_marginBottom="@dimen/dimen_4"
                    android:layout_weight="4"
                    android:gravity="end"
                    android:textColor="?attr/bhargo_color_ten"
                    android:text="@string/last_message_date"
                    android:textSize="@dimen/control_input_text_size"
                    app:customFont="@string/font_satoshi" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:orientation="vertical"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
