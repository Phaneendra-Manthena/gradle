<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/_2sdp"
        app:cardBackgroundColor="@color/mat_white"
        app:cardUseCompatPadding="true">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/rl_dv_gitr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/tv_ev_Heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="@string/heading"
                        android:textColor="?attr/bhargo_color_ten"
                        android:textSize="@dimen/_12sdp"
                        app:customFont="@string/font_satoshi_bold" />

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/tv_ev_SubHeading"
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/heading"
                        android:textColor="?attr/bhargo_color_ten"
                        android:textSize="@dimen/_12sdp"
                        app:customFont="@string/font_satoshi_bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="start|bottom|center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="16dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_height="16dp"
                            android:id="@+id/iv_source_icon"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/source"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/map"/>


                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/ll_Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_2sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="start|bottom|center_vertical"
                        android:orientation="horizontal">

                        <com.bhargo.user.custom.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:id="@+id/tv_job_type"
                            android:padding="@dimen/_2sdp"
                            android:background="@drawable/camera_button_bg"
                            android:text="@string/source"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            app:customFont="@string/font_satoshi_bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="end|bottom|center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/source"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/time"/>

                        <com.bhargo.user.custom.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:id="@+id/tv_ev_time"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/time"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            app:customFont="@string/font_satoshi_bold" />


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
