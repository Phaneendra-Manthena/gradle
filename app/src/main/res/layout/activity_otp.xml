<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_OTPMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.OTPActivityOld">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_OTP_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="@drawable/bhargo_bg_footer" />
            <!--                android:background="@drawable/improve_icon_launcher" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_otp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bhargo_user_banner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="vertical">

                <com.bhargo.user.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:text="@string/please_enter_otp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    app:customFont="@string/font_name_bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp3"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp4"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp5"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp6"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                </LinearLayout>

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/ctv_resend_OTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_refresh_black_24dp"
                    android:text="@string/resend" />

                <com.bhargo.user.custom.CustomButton
                    android:id="@+id/cb_otp_submit"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/button_rounded_corners"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textColor="@color/mat_white"
                    android:textSize="@dimen/_14sdp"
                    app:customFont="@string/font_name" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/iv_otpBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_white_36dp" />
    </LinearLayout>
</RelativeLayout>