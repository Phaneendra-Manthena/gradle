<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mat_white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_circle_tasks"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/icon_informations_tech" />


        <LinearLayout
            android:id="@+id/ll_taskitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:layout_toEndOf="@+id/iv_circle_tasks"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvTasks_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Task Name"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_name_semi_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/tvTasksStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="Status : "
                        android:textColor="@color/waterfall"
                        android:textSize="@dimen/_11sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/tvTasksStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="Tasks Status"
                        android:textColor="@color/waterfall"
                        android:textSize="@dimen/_11sdp"
                        app:customFont="@string/font_name_semi_bold" />
                </LinearLayout>

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvTasksDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Task Description"
                    android:textColor="@color/waterfall"
                    android:textSize="@dimen/_11sdp"
                    app:customFont="@string/font_name" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/tvTasksCreatedDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="Created Date : "
                        android:textColor="@color/waterfall"
                        android:textSize="@dimen/_11sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/tvTasksCreatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="Task Date"
                        android:textColor="@color/waterfall"
                        android:textSize="@dimen/_11sdp"
                        app:customFont="@string/font_name_semi_bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/icon_edit"/>
                    <ImageView
                        android:id="@+id/iv_comments"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="right"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/icon_chat"/>


                </LinearLayout>


                <!--                <LinearLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginTop="@dimen/_3sdp"-->
                <!--                    android:layout_marginRight="@dimen/_10sdp"-->
                <!--                    android:layout_marginBottom="@dimen/_3sdp"-->
                <!--                    android:gravity="right"-->
                <!--                    android:orientation="horizontal">-->

                <!--                    <ImageView-->
                <!--                        android:id="@+id/iv_modify"-->
                <!--                        android:layout_width="@dimen/_20sdp"-->
                <!--                        android:layout_height="@dimen/_20sdp"-->
                <!--                        android:background="@drawable/ic_edit_black_24dp" />-->
                <!--                </LinearLayout>-->
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/ll_taskitem"
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/chat_divider" />

    </RelativeLayout>


</LinearLayout>
