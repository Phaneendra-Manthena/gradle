<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:elevation="@dimen/_2sdp"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">
        <TextView
            android:id="@+id/notification_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/tv_ev_Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="30"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            app:customFont="@string/font_name_bold"/>

        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/tv_ev_SubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:layout_below="@id/tv_ev_Heading"
            android:text="Notification"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            app:customFont="@string/font_name_semi_bold" />

        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/tv_ev_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ev_SubHeading"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:text="Time"
            android:textColor="@color/Gray"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            app:customFont="@string/font_name_semi_bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>