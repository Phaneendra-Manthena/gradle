<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_OTPMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.OTPActivityOld">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_OTP_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_below="@+id/toolbar"
            android:layout_centerInParent="true"
            android:background="@drawable/improve_icon_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mat_white"
            android:elevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/ct_otp_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pls_enter_otp"
                    android:textColor="@color/black"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp3"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp4"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp5"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                    <com.bhargo.user.custom.CustomEditText
                        android:id="@+id/ce_otp6"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sdp"
                        app:customFont="@string/font_name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/ctv_dont_getcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/dont_get_code" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.bhargo.user.custom.CustomTextView
                        android:id="@+id/ctv_resend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_refresh_black_24dp"
                        android:gravity="start"
                        android:text="@string/resend" />

                </LinearLayout>

                <com.bhargo.user.custom.CustomButton
                    android:id="@+id/cb_otp_submit"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/button_rounded_corners"
                    android:backgroundTint="@color/Red"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textColor="@color/mat_white"
                    android:textSize="@dimen/_14sdp"
                    app:customFont="@string/font_name" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>