<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_15">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--        card_bg_rounded_corners-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg_rounded_corners"
            android:orientation="vertical">

            <com.bhargo.user.utils.RoundedImageView
                android:id="@+id/iv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icons_image"
                app:riv_corner_radius="@dimen/dimen_10"
                android:visibility="gone" />

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/sample_text"
                android:textColor="@color/control_input_text_color"
                android:textSize="@dimen/text_size_14"
                app:customFont="@string/font_satoshi" />

            <LinearLayout
                android:id="@+id/ll_questionParagraphContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.bhargo.user.custom.CustomEditText
                android:id="@+id/editText_answer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="?attr/bhargo_color_fourteen"
                android:inputType="text"
                android:paddingStart="@dimen/dimen_5"
                android:text="Answer"
                android:textColor="@color/control_input_text_color"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi_bold" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
