<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_198"
    android:layout_marginLeft="@dimen/dimen_20"
    android:layout_marginTop="@dimen/dimen_5"
    android:layout_marginRight="@dimen/dimen_20"
    android:layout_marginBottom="@dimen/dimen_5"
    android:background="@drawable/card_bg_rounded_corners"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_Attempt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:text="Attempt"
                android:textColor="@color/control_input_text_color"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi_bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.bhargo.user.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:text="Result : "
                    android:textColor="?attr/bhargo_color_eleven"
                    android:textSize="@dimen/text_size_16"
                    app:customFont="@string/font_satoshi" />

                <com.bhargo.user.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:text="80%"
                    android:textColor="@color/default_green_color"
                    android:textSize="@dimen/text_size_20"
                    app:customFont="@string/font_satoshi_bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <com.bhargo.user.custom.CustomButton
                android:id="@+id/btn_startAssessment"
                android:layout_width="@dimen/dimen_110"
                android:layout_height="@dimen/dimen_35"
                android:layout_gravity="center"
                android:background="@drawable/default_button_rounded_corners"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingTop="@dimen/dimen_3"
                android:paddingRight="@dimen/dimen_5"
                android:text="More Details"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                app:customFont="@string/font_satoshi" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_14"
        android:background="@color/default_divider"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAttemptDateHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:text="Attempt Date: "
                android:textColor="@color/control_input_text_color"
                android:textSize="@dimen/text_size_14"
                app:customFont="@string/font_satoshi" />

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAttemptDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:text="07-04-2022"
                android:textColor="@color/control_input_text_color"
                android:textSize="@dimen/text_size_14"
                app:customFont="@string/font_satoshi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="0.4"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_16"
                android:layout_height="@dimen/dimen_16"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dimen_5"
                android:background="@drawable/ic_duration_medium"
                android:gravity="end|center_vertical" />

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAttemptDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:text="14:39mins"
                android:textColor="@color/control_input_text_color"
                android:textSize="@dimen/text_size_14"
                app:customFont="@string/font_satoshi" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:orientation="vertical">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/otp_blue"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi_bold" />

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginTop="@dimen/dimen_2"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:text="Total"
                android:textColor="?attr/bhargo_color_eleven"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_45"
            android:layout_gravity="center"
            android:background="@color/default_divider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:orientation="vertical">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/default_green_color"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi_bold" />

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginTop="@dimen/dimen_2"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:text="Right"
                android:textColor="?attr/bhargo_color_eleven"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_45"
            android:layout_gravity="center"
            android:background="@color/default_divider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:orientation="vertical">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/delete_icon"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi_bold" />

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginTop="@dimen/dimen_2"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:text="Wrong"
                android:textColor="?attr/bhargo_color_eleven"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_45"
            android:layout_gravity="center"
            android:background="@color/default_divider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:orientation="vertical">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvSkipped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/control_input_text_color"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi_bold" />

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginTop="@dimen/dimen_2"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:text="Skipped"
                android:textColor="?attr/bhargo_color_eleven"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_satoshi" />

        </LinearLayout>
    </LinearLayout>

    <!--Old Design Start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_Attempt_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Attempts"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name_semi_bold" />

            <!--                <ImageView-->
            <!--                    android:layout_gravity="right"-->
            <!--                    android:layout_width="@dimen/_24sdp"-->
            <!--                    android:layout_height="@dimen/_24sdp"-->
            <!--                    android:background="@drawable/ic_timer_green_24dp" />-->

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingTop="@dimen/_4sdp"
                android:text="Duration"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name_semi_bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Date &amp;Time"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name" />

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_date_time_taken"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Date Time"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_marks_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Marks"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name" />

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_marks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.7"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Marks"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_ResultTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Status"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name" />

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tvAssessment_Result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.7"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Qualified"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name" />
        </LinearLayout>

    </LinearLayout>
    <!--Old Design End-->
</LinearLayout>
