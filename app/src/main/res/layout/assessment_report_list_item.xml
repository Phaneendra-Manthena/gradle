<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvAssessment_Attempt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:text="Attempts"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_name_semi_bold" />

                <!--                <ImageView-->
                <!--                    android:layout_gravity="right"-->
                <!--                    android:layout_width="@dimen/_24sdp"-->
                <!--                    android:layout_height="@dimen/_24sdp"-->
                <!--                    android:background="@drawable/ic_timer_green_24dp" />-->

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvAssessment_Duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_timer_black_24dp"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_alignParentRight="true"
                    android:text="Duration"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_name_semi_bold" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvAssessment_date_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.3"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Date &amp;Time"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_satoshi" />

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvAssessment_date_time_taken"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:text="Date Time"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_satoshi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvAssessment_marks_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.3"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Marks"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_satoshi" />

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvAssessment_marks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.7"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Marks"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_satoshi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvAssessment_ResultTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.3"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Status"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_satoshi" />

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tvAssessment_Result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.7"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Qualified"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_satoshi" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
