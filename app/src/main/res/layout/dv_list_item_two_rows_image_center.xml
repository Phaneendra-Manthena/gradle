<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="1.5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center">

            <ImageView
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/iv_dv_gitr"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_hospita_name_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tv_gitr_Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Heading"
                    android:textColor="@color/colorPrimaryDark"
                    app:customFont="@string/font_name_bold"
                    android:textSize="@dimen/_14sdp"/>
                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/ctv_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="value"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/dv_rectangle"
                    app:customFont="@string/font_name_semi_bold"/>

                <com.bhargo.user.custom.CustomTextView
                    android:id="@+id/tv_gitr_SubHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_gitr_Heading"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Sub Heading"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="@dimen/_12sdp"
                    app:customFont="@string/font_name_semi_bold" />
                <LinearLayout
                    android:id="@+id/ll_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_gitr_SubHeading"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_2sdp"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>