<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/ll_control_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="@dimen/_1sdp"
            android:background="@drawable/rectangle_box_divider_color_grid_header"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:text="@string/label"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:customFont="@string/font_name" />
        <!--   android:padding="@dimen/_5sdp" android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_minus1sdp"
            android:layout_marginEnd="@dimen/_2sdp"-->
    </FrameLayout>

    <View
        android:id="@+id/dtView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@android:color/holo_orange_dark" />

</LinearLayout>