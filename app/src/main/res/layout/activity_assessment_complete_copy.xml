<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AssessmentCompleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_100"
        android:layout_marginLeft="@dimen/dimen_44"
        android:layout_marginRight="@dimen/dimen_44"
        android:gravity="center"
        android:orientation="vertical">


        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/ctv_AssessmentCompleteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:text="You are Awesome"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_18"
            app:customFont="@string/font_satoshi_bold" />

        <com.bhargo.user.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="Congratulations for getting 12 out of 15 Answers correctly"
            android:textColor="?attr/bhargo_color_eleven"
            android:textSize="@dimen/text_size_16"
            app:customFont="@string/font_satoshi_bold" />

        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/ctv_viewSolutions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="View Solutions"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_18"
            app:customFont="@string/font_satoshi_bold" />

    </LinearLayout>
</RelativeLayout>