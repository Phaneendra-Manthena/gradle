<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_LoginMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.LoginActivityOld">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_310sdp"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border">

            <ImageView
                android:id="@+id/iv_login_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@drawable/improve_icon_launcher" />

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_30sdp"
    android:layout_marginTop="@dimen/_100sdp"
    android:layout_marginRight="@dimen/_30sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_login"
            android:gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="center_vertical">

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:gravity="center"
                android:text="@string/mobile_no"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:customFont="@string/font_name" />
            <com.bhargo.user.custom.CustomEditText
                android:id="@+id/ce_mobile_no"
                android:layout_width="@dimen/_175sdp"
                android:layout_height="@dimen/_48sdp"
                android:gravity="center"
                android:background="@drawable/main_rounded_corners"
                android:hint="@string/enter_mobile_no"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name" />

            <com.bhargo.user.custom.CustomButton
                android:id="@+id/cb_login_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_rounded_corners"
                android:backgroundTint="@color/Red"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="@color/mat_white"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/font_name" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>


    </FrameLayout>


</LinearLayout>