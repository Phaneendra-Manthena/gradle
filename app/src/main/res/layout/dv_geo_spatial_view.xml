<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_dv_gitr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_dv_gitr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="true" />

        </LinearLayout>

        <View
            android:id="@+id/v_dv_gitr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/ll_dv_gitr"
            android:background="@color/chat_divider" />
        <!--android:layout_marginBottom="@dimen/_10sdp"-->

        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/tv_gitr_Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_dv_gitr"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingTop="@dimen/_2sdp"
            android:text="Heading"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sdp"
            app:customFont="@string/font_name_semi_bold" />

        <LinearLayout
            android:id="@+id/ll_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gitr_Heading"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_2sdp"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gitr_Heading"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_2sdp">

            <com.bhargo.user.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Description"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                app:customFont="@string/font_name" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>

