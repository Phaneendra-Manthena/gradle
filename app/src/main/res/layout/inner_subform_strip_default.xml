<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main_inside"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_innerSubForm"
        android:layout_width="match_parent"
        android:background="@drawable/card_bg_rounded_corners"
        android:layout_margin="@dimen/dimen_5"
        android:padding="@dimen/dimen_10"
        android:elevation="0.5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_deleteSubForm"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:padding="@dimen/dimen_5"
            android:visibility="gone"
            android:layout_gravity="right"
            app:tint="@color/delete_icon"
            android:background="@drawable/bg_circle_delete"
            android:src="@drawable/trash" />


        <LinearLayout
            android:id="@+id/ll_innerSubFormContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <HorizontalScrollView
            android:visibility="gone"
            android:id="@+id/gridScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_grid_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_10sdp" />
        </HorizontalScrollView>

    </LinearLayout>
</LinearLayout>
