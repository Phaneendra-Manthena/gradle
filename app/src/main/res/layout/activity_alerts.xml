<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".screens.AlertsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSuccess"
            android:textSize="16sp"
            android:text="success"
            tools:ignore="ButtonStyle"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonWarning"
            android:textSize="16sp"
            android:text="warning"
            tools:ignore="ButtonStyle"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonError"
            android:textSize="16sp"
            android:text="error"
            tools:ignore="ButtonStyle"/>



        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNormal"
            android:textSize="16sp"
            android:text="Normal Design"
            tools:ignore="ButtonStyle"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRound"
            android:textSize="16sp"
            android:text="Round Design"
            tools:ignore="ButtonStyle"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCut"
            android:textSize="16sp"
            android:text="Cut Design"
            tools:ignore="ButtonStyle"/>
    </LinearLayout>



</RelativeLayout>