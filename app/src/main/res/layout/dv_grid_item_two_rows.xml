<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/rl_dv_gitr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_dv_gitr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_dv_gitr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_not_found" />
            </LinearLayout>

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/ctv_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="value"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/dv_rectangle"
                app:customFont="@string/font_name_semi_bold"/>

            <View
                android:id="@+id/v_dv_gitr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/ll_dv_gitr"
                android:background="@color/chat_divider" />

            <com.bhargo.user.custom.CustomTextView
                android:id="@+id/tv_gitr_Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_dv_gitr"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingTop="@dimen/_2sdp"
                android:text="Heading"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:customFont="@string/font_name_semi_bold" />

            <LinearLayout
                android:id="@+id/ll_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_gitr_Heading"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_2sdp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
