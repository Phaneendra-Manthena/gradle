<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_5sdp">

        <ImageView
            android:id="@+id/iv_mDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_menu_32" />

        <com.bhargo.user.custom.CustomTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="MyTitle"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/_14sdp"
            app:customFont="@string/font_name_bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_weight="0.3"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_wishList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/ic_baseline_favorite_32" />

        <ImageView
            android:id="@+id/iv_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_notifications_32" />
    </LinearLayout>
</LinearLayout>